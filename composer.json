{
  "name": "ispa/api-clients",
  "description": "API clients for all ISPA applications",
  "keywords": [
    "ispa",
    "php",
    "api"
  ],
  "type": "library",
  "license": [
    "MIT"
  ],
  "homepage": "https://github.com/ispalliance/api-clients",
  "authors": [
    {
      "name": "Milan Felix Šulc",
      "homepage": "https://f3l1x.io"
    },
    {
      "name": "Marek Bartoš",
      "homepage": "https://marek-bartos.cz"
    },
    {
      "name": "Tomáš Sedláček"
    }
  ],
  "require": {
    "php": ">=7.3",
    "guzzlehttp/guzzle": "^6.3.3",
    "contributte/utils": "^0.4.0"
  },
  "require-dev": {
    "ext-dom": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "ext-soap": "*",
    "ninjify/qa": "^0.9.0",
    "phpunit/phpunit": "^8.0.4",
    "nette/di": "~2.4.15 || ~3.0.0",
    "phpstan/phpstan-shim": "^0.11.2",
    "phpstan/phpstan-deprecation-rules": "^0.11.0",
    "phpstan/phpstan-nette": "^0.11.0",
    "phpstan/phpstan-strict-rules": "^0.11.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "ISPA\\ApiClients\\": "src",
      "Tests\\Cases\\": "tests/cases",
      "Tests\\Toolkit\\": "tests/toolkit"
    }
  },
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tests": [
      "phpunit -c phpunit.xml --stderr --colors=always"
    ],
    "coverage": [
      "phpdbg -qrr vendor/bin/phpunit tests --colors=always -c tests/coverage.xml"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyse -l max -c phpstan.neon src"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.2.x-dev"
    }
  }
}
